{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es5",
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "index.ts",
    "main/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
